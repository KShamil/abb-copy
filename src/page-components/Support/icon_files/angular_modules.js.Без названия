angular.module('card-order', [])
    .controller('colorController', function ($scope) {
            selectBox('#color_ring', {
                onChange: e => {
                    if($(e.querySelector('option:checked')).val() === 'white'){
                        $scope.isBlack = false;
                        $scope.isWhite = true;
                    }else{
                        $scope.isWhite = false;
                        $scope.isBlack = true;
                    }
                    $scope.$apply();
                    var Selectric = $('#size_ring').data('selectric');
                    Selectric.refresh()

                    __selectChange(e);
                    __formStepping(e);
                },
                onChangeMobile: element => {
                    $(element).on('change', e => {
                        if($(e.target.querySelector('option:checked')).val() === 'white'){
                            $scope.isBlack = false;
                            $scope.isWhite = true;
                        }else{
                            $scope.isWhite = false;
                            $scope.isBlack = true;
                        }
                        $scope.$apply();
                        var Selectric = $('#size_ring').data('selectric');
                        Selectric.refresh();

                        __selectChange(e.target);
                        __formStepping(e.target);
                    });
                },
            });

            $scope.isWhite = false;
            $scope.isBlack = false;

            $scope.init = function (){
                $('#size_ring').data('selectric').refresh()
            }
        }
    ).controller('azercellController', function ($scope) {
        $scope.falseNumber = false;
    }
)

angular.module('deposit-calculator', [])
    .controller('depositCalculatorController', function ($scope) {
            $scope.yearly = false;
            $scope.monthly = false;
        }
    );

angular.module('business-loan', [])
    .controller('form', function ($scope) {

            var is_micro = $('#is_micro').val();
            console.log(is_micro)

        const micro_selected = function (){
            if($scope.microCreditSelected){
                $scope.amount_note = $("#max_val").val();
                $scope.min_amount = 0;
                $scope.max_amount = 20000;
            }else{
                $scope.amount_note = $("#min_val").val();
                $scope.min_amount = 50000;
                $scope.max_amount = 999999999;
            }

            // $scope.$apply();
        }

            $scope.microCreditSelected = $('#is_micro').val() ===  '1';
            micro_selected()



            selectBox('#js-selectric-credit-2', {
                onChange: e => {
                    if($(e.querySelector('option:checked')).val() === '7588'){
                        $scope.microCreditSelected = true;

                    }else{
                        $scope.microCreditSelected = false;
                    }
                    micro_selected()

                    $scope.$apply();
                },
                onChangeMobile: element => {
                    $(element).on('change', e => {
                        if($(e.target.querySelector('option:checked')).val() === '7588'){
                            $scope.microCreditSelected = true;
                        }else{
                            $scope.microCreditSelected = false;
                        }
                        $scope.$apply();
                    });
                },
            });
        }
    );
